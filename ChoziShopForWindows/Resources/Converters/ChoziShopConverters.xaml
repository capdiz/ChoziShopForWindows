<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:ChoziShopForWindows.Converters">
    <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    <local:BoolToImageConverter x:Key="BoolToImageConverter" />
    <local:UgxCurrencyConverter x:Key="UgxCurrencyConverter" />
    <local:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    <local:PropertyCollectionConverter x:Key="OrderItemsListConverter" PropertyName="ProductName" EmptyCollection="No items found" />
    <local:UserIdToNameConverter x:Key="UserIdToNameConverter" />
    <local:PaymentModeConverter x:Key="PaymentModeConverter"/>
    <local:PaymentStatusConverter x:Key="PaymentStatusConverter" />
    <local:OrderStatusConverter x:Key="OrderStatusConverter" />
    <local:FirstErrorConverter x:Key="FirstErrorConverter" />
    <local:SecureStringToPasswordConverter x:Key="StringToPasswordConverter" />
    <local:BoolToColorConverter x:Key="BoolToColorConverter" />
    <local:IntegerToBooleanConverter x:Key="IntToBooleanConverter" />
    <local:IntegerToVisibilityConverter x:Key="IntToVisibilityConverter" />
    <local:IntegerToStringConverter x:Key="SalesGroupHeaderConverter"
                                    Value0="Your sales"
                                    Value1="Shop sales"
                                    DefaultValue="Sales"/>
    <local:IntegerToStringConverter x:Key="OrdersGroupBoxHeaderConverter"
                                    Value0="Orders processed by you"
                                    Value1="Shop orders"
                                    DefaultValue="Orders" />
    <local:IntegerToStringConverter x:Key="OrderPaymentStatusConverter"
                                    Value0="Pending"
                                    Value1="Success"
                                    Value2="Failed"
                                    DefaultValue="Unknown" />
</ResourceDictionary>